{
  "name": "CopyUrl Pro",
  "version": "1.0",
  "description": "This extension will help to copy the url of the current page in one click",
  "browser_action": {
    "default_icon": {
      "16": "copyurl-16.png",
      "48": "copyurl-48.png",
      "128": "copyurl-128.png"
    },
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["scripts.js"],
    "persistent": false
  },
  "permissions": ["tabs", "activeTab", "clipboardWrite"],
  "update_url": "https://clients2.google.com/service/update2/crx",
  "homepage_url": "http://polosatova.com/",
  "manifest_version": 2
}
